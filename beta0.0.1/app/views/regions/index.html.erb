<p id="notice"><%= notice %></p>

<h1>Listing Regions</h1>

<% if user_signed_in? %>
  <%= "You are  logged in as #{current_user.email}" %>
<% end %>

<%= form_tag(regions_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Regions" %>
      <%= submit_tag "Search", :name => nil %>
  <% end %>
<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Typeid</th>
      <th>Keywords</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.title %></td>
        <td><%= region.typeID %></td>
        <td><%= region.keywords %></td>
        <td><%= region.description %></td>
        <td><%= link_to 'Show', region %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

