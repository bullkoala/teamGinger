<p id="notice"><%= notice %></p>
<% provide(:title, "Acts") %>

<div class="container-fluid">
  <% provide(:panel_title, "Acts") %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Type</th>
        <th>Gold Cost</th>
        <th>Keywords</th>
        <th>Description</th>
        <th>Focus</th>
        <th colspan="6"></th>
      </tr>
    </thead>

    <tbody>
      <% @acts.each do |act| %>
        <tr>
          <td><%= act.title %></td>
          <td><%= type_title(act.typeID) %></td>
          <td><%= act.goldCost %></td>
          <td><%= act.keywords %></td>
          <td><%= act.description %></td>
          <td><%= act.focus %></td>
          <td><%= link_to 'Show', act %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>