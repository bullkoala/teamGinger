<p id="notice"><%= notice %></p>

<h1>Listing Acts</h1>

<%= form_tag(acts_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Acts" %>
      <%= submit_tag "Search", :name => nil %>
  <% end %>

<br>

<table>
  <thead>
    <tr>
      <th>Typeid</th>
      <th>Goldcost</th>
      <th>Keywords</th>
      <th>Description</th>
      <th>Focus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @acts.each do |act| %>
      <tr>
        <td><%= act.typeID %></td>
        <td><%= act.goldCost %></td>
        <td><%= act.keywords %></td>
        <td><%= act.description %></td>
        <td><%= act.focus %></td>
        <td><%= link_to 'Show', act %></td>
        <td><%= link_to 'Edit', edit_act_path(act) %></td>
        <td><%= link_to 'Destroy', act, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

<%= link_to 'New Act', new_act_path %>
