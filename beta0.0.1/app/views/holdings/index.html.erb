<p id="notice"><%= notice %></p>

<h1>Listing Holdings</h1>

<%= form_tag(holdings_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Holdings" %>
      <%= submit_tag "Search", :name => nil %>
  <% end %>
<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Typeid</th>
      <th>Goldcost</th>
      <th>Goldproduction</th>
      <th>Honorproduction</th>
      <th>Keywords</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holdings.each do |holding| %>
      <tr>
        <td><%= holding.title %></td>
        <td><%= holding.typeID %></td>
        <td><%= holding.goldCost %></td>
        <td><%= holding.goldProduction %></td>
        <td><%= holding.honorProduction %></td>
        <td><%= holding.keywords %></td>
        <td><%= holding.description %></td>
        <td><%= link_to 'Show', holding %></td>
        <td><%= link_to 'Edit', edit_holding_path(holding) %></td>
        <td><%= link_to 'Destroy', holding, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Holding', new_holding_path %>
