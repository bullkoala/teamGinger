<p id="notice"><%= notice %></p>
<% provide(:title, "Followers") %>

<div class="container-fluid">
  <% provide(:panel_title, "Followers") %>
  <table class="table table-striped table-bordered">

  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Strength</th>
      <th>Chi</th>
      <th>Personal Honor</th>
      <th>Gold Cost</th>
      <th>Honor Req'd</th>
      <th>Keywords</th>
      <th>Description</th>
      <th>Focus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @followers.each do |follower| %>
      <tr>
        <td><%= follower.title %></td>
        <td><%= type_title(follower.typeID) %></td>
        <td><%= follower.strength %></td>
        <td><%= follower.chi %></td>
        <td><%= follower.personalHonor %></td>
        <td><%= follower.goldCost %></td>
        <td><%= follower.honorRequirement %></td>
        <td><%= follower.keywords %></td>
        <td><%= follower.description %></td>
        <td><%= follower.focus %></td>
        <td><%= link_to 'Show', follower %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>