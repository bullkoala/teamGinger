<p id="notice"><%= notice %></p>

<h1>Listing Followers</h1>

<% if user_signed_in? %>
  <%= "You are  logged in as #{current_user.email}" %>
<% end %>

<%= form_tag(followers_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Followers" %>
      <%= submit_tag "Search", :name => nil %>
  <% end %>
<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Typeid</th>
      <th>Strength</th>
      <th>Chi</th>
      <th>Personalhonor</th>
      <th>Goldcost</th>
      <th>Honorrequirement</th>
      <th>Keywords</th>
      <th>Description</th>
      <th>Focus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @followers.each do |follower| %>
      <tr>
        <td><%= follower.title %></td>
        <td><%= follower.typeID %></td>
        <td><%= follower.strength %></td>
        <td><%= follower.chi %></td>
        <td><%= follower.personalHonor %></td>
        <td><%= follower.goldCost %></td>
        <td><%= follower.honorRequirement %></td>
        <td><%= follower.keywords %></td>
        <td><%= follower.description %></td>
        <td><%= follower.focus %></td>
        <td><%= link_to 'Show', follower %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
