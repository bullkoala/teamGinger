<p id="notice"><%= notice %></p>

<h1>Listing Attachments</h1>

<% if user_signed_in? %>
  <%= "You are  logged in as #{current_user.email}" %>
<% end %>


<%= form_tag(attachments_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Attachments" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Typeid</th>
      <th>Strength</th>
      <th>Chi</th>
      <th>Goldcost</th>
      <th>Keywords</th>
      <th>Description</th>
      <th>Focus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attachments.each do |attachment| %>
      <tr>
        <td><%= attachment.title %></td>
        <td><%= attachment.typeID %></td>
        <td><%= attachment.strength %></td>
        <td><%= attachment.chi %></td>
        <td><%= attachment.goldCost %></td>
        <td><%= attachment.keywords %></td>
        <td><%= attachment.description %></td>
        <td><%= attachment.focus %></td>
        <td><%= link_to 'Show', attachment %></td>
     
      </tr>
    <% end %>
  </tbody>
</table>

<br>


