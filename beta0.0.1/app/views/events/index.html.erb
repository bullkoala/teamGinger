<% provide(:title, "Events") %>

<div class="container-fluid">
  <% provide(:panel_title, "Events") %>
    <hr>
  <%= render 'search' %>
  <hr>
  <table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= type_title(event.typeID)%></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
 
      </tr>
    <% end %>
  </tbody>
</table>
</div>