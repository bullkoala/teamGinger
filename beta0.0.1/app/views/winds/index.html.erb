<p id="notice"><%= notice %></p>

<h1>Listing Winds</h1>

<%= form_tag(winds_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Winds" %>
      <%= submit_tag "Search", :name => nil %>
  <% end %>
<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Typeid</th>
      <th>Keywords</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @winds.each do |wind| %>
      <tr>
        <td><%= wind.title %></td>
        <td><%= wind.typeID %></td>
        <td><%= wind.keywords %></td>
        <td><%= wind.description %></td>
        <td><%= link_to 'Show', wind %></td>
        <td><%= link_to 'Edit', edit_wind_path(wind) %></td>
        <td><%= link_to 'Destroy', wind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wind', new_wind_path %>
